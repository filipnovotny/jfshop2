server {
    listen       8080;
    server_name  localhost;

    location / {
        root   html;
        index  index.html index.htm;
        proxy_pass http://0.0.0.0:8000;
    }
    location /static {
        autoindex on;
        alias /<%CURRENTDIR%>/static;
    }

    error_page   500 502 503 504  /50x.html;
    location = /50x.html {
        root   html;
    }
}